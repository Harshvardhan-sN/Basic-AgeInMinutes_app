<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#065a60"
    android:padding="18dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CALCULATE YOUR AGE"
        android:textColor="@color/n_red"

        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="IN MINUTES"
        android:textColor="@color/n_red"
        android:background="#CCEEFF"
        android:textSize="23sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#330010"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingVertical="2dp"
        android:paddingHorizontal="15dp"
        android:background="#96AFBD"
        android:text="Enter your name"/>

    <Button
        android:id="@+id/Bt01id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Enter your Birthday"
        android:textColor="@color/black"
        android:backgroundTint="#96AFBD"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selectMyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="#330010"
        android:textSize="20sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="SELECTED DATE"
        android:textColor="#330010"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calAgeMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/n_lavender"
        android:textSize="35sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="AGE IN MINUTES"
        android:textColor="#330010"
        android:textSize="21sp"
        android:textStyle="bold" />

</LinearLayout>